<h1>予定編集</h1>

<%= render "shared/error", obj: @schedule %>

<%= form_with model: @schedule do |f| %>
  <table>
    <tr>
      <th><%= f.label :title, "タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>

    <tr>
      <th><%= f.label :start_date, "開始日" %></th>
      <td><%= f.date_select :start_date %></td>
    </tr>

    <tr>
      <th><%= f.label :end_date, "終了日" %></th>
      <td><%= f.date_select :end_date %></td>
    </tr>

    <tr>
      <th><%= f.label :all_day, "終日" %></th>
      <td><%= f.check_box :all_day %></td>
    </tr>

    <tr>
      <th><%= f.label :memo, "メモ" %></th>
      <td><%= f.text_area :memo %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "編集完了" %></li>
      <li><%= link_to "一覧に戻る", "/schedules" %></li>
    </ul>

<% end %>
